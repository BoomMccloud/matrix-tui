# VPS public IP — all Matrix values are derived from this automatically.
# Set this and you only need to provide passwords below.
VPS_IP = 1.2.3.4

# Derived automatically from VPS_IP:
#   Bot login:   @matrixbot:<VPS_IP>  password: MATRIX_PASSWORD
#   Your login:  @admin:<VPS_IP>      password: MATRIX_ADMIN_PASSWORD
# Override MATRIX_ADMIN_USER to use a different username (e.g. @jason:<VPS_IP>)
MATRIX_PASSWORD =
MATRIX_ADMIN_PASSWORD =

# Optional overrides — only needed if using matrix.org instead of self-hosted Synapse
# MATRIX_HOMESERVER = https://matrix.org
# MATRIX_USER = @mybot:matrix.org

# LLM provider — pick one:
# OpenRouter:  LLM_MODEL=openrouter/anthropic/claude-sonnet-4  LLM_API_KEY=sk-or-...
# Gemini:      LLM_MODEL=gemini/gemini-2.5-pro                 LLM_API_KEY=AI...
LLM_API_KEY =
# LLM_MODEL = openrouter/anthropic/claude-haiku-4-5  # default, override to use a different model

# Gemini CLI coding agent (optional — used inside sandbox containers)
GEMINI_API_KEY =

# GitHub access for PRs (fine-grained PAT, needs contents+pull-requests write)
GITHUB_TOKEN =

# Runtime (defaults shown — override only if needed)
PODMAN_PATH = podman
SANDBOX_IMAGE = matrix-agent-sandbox:latest
COMMAND_TIMEOUT_SECONDS = 120
CODING_TIMEOUT_SECONDS = 1800
MAX_AGENT_TURNS = 25
IPC_BASE_DIR = /tmp/sandbox-ipc
