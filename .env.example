# VPS public IP — used by setup-synapse.sh to configure the local homeserver
VPS_IP = 1.2.3.4

# Matrix bot account
# If self-hosting (recommended): http://<VPS_IP>:8008
# If using matrix.org: https://matrix.org
MATRIX_HOMESERVER = http://1.2.3.4:8008
MATRIX_USER = @matrixbot:1.2.3.4
MATRIX_PASSWORD =

# LLM provider — pick one:
# OpenRouter:  LLM_MODEL=openrouter/anthropic/claude-sonnet-4  LLM_API_KEY=sk-or-...
# Gemini:      LLM_MODEL=gemini/gemini-2.5-pro                 LLM_API_KEY=AI...
LLM_API_KEY =
LLM_MODEL = openrouter/anthropic/claude-sonnet-4

# Gemini CLI coding agent (optional — used inside sandbox containers)
GEMINI_API_KEY =

# GitHub access for PRs (fine-grained PAT, needs contents+pull-requests write)
GITHUB_TOKEN =

# Runtime (defaults shown — override only if needed)
PODMAN_PATH = podman
SANDBOX_IMAGE = matrix-agent-sandbox:latest
COMMAND_TIMEOUT_SECONDS = 120
CODING_TIMEOUT_SECONDS = 1800
MAX_AGENT_TURNS = 25
IPC_BASE_DIR = /tmp/sandbox-ipc
